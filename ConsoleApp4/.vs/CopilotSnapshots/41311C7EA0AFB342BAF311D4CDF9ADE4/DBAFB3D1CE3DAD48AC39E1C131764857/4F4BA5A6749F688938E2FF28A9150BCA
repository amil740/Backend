using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp4.Temprature
{
    internal class Celsius
    {
        public double Degree { get; set; }
    }
    public static class CelsiusExtension
    {
        public static implicit operator ToKelvin(this Celsius celsius)
        {
            return new Kelvin { Degree = celsius.Degree + 273.15 };
        }
    }
}
