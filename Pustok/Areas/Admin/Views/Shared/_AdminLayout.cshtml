<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
 <title>@ViewData["Title"] - Pustok Admin Panel</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/admin/css/admin.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
      <aside class="main-sidebar">
            <div class="sidebar-brand">
       <h3>
    <i class="fas fa-book"></i> PUSTOK
    </h3>
             <small>Admin Panel</small>
         </div>
            
<div class="sidebar">
          <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column">
      <!-- Dashboard -->
    <li class="nav-item">
           <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">
         <i class="nav-icon fas fa-tachometer-alt"></i>
          <p>Dashboard</p>
     </a>
         </li>
          
            <!-- Products -->
         <li class="nav-item">
       <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="nav-link">
       <i class="nav-icon fas fa-box"></i>
            <p>Products</p>
 </a>
       </li>
        
        <!-- Categories -->
         <li class="nav-item">
      <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link">
     <i class="nav-icon fas fa-list"></i>
        <p>Categories</p>
    </a>
     </li>
             
                 <!-- Orders -->
       <li class="nav-item">
   <a href="#" class="nav-link">
    <i class="nav-icon fas fa-shopping-cart"></i>
        <p>Orders</p>
        </a>
   </li>
  
               <!-- Customers -->
   <li class="nav-item">
   <a href="#" class="nav-link">
     <i class="nav-icon fas fa-users"></i>
           <p>Customers</p>
      </a>
       </li>
       
 <!-- Sliders -->
               <li class="nav-item">
    <a href="#" class="nav-link">
      <i class="nav-icon fas fa-images"></i>
   <p>Sliders</p>
       </a>
      </li>
    
            <!-- Settings -->
    <li class="nav-item">
         <a href="#" class="nav-link">
          <i class="nav-icon fas fa-cog"></i>
          <p>Settings</p>
     </a>
     </li>
      
        <!-- Back to Site -->
           <li class="nav-item">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" target="_blank">
              <i class="nav-icon fas fa-external-link-alt"></i>
 <p>View Website</p>
   </a>
            </li>
            </ul>
      </nav>
            </div>
        </aside>

     <!-- Content Wrapper -->
        <div class="content-wrapper">
     <!-- Content Header -->
          <section class="content-header">
      <div class="container-fluid">
             <div class="row mb-2">
              <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
     </div>
          <div class="col-sm-6">
         <ol class="breadcrumb float-sm-right">
   <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
 <li class="breadcrumb-item active">@ViewData["Title"]</li>
     </ol>
     </div>
         </div>
          </div>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
         @RenderBody()
      </div>
  </section>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
 <!-- Custom Admin JS -->
    <script src="~/admin/js/admin.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
