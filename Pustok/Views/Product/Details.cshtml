@model Pustok.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<!--=================================
Product Details
===================================== -->
<section class="product-details section-padding-top">
    <div class="container">
  <div class="row">
  <div class="col-lg-6">
      <!-- Product Details Slider Big Image-->
            <div class="product-details-slider sb-slick-slider arrow-type-two" data-slick-setting='{
     "slidesToShow": 1,
  "arrows": false,
        "fade": true,
      "draggable": false,
                  "swipe": false,
        "asNavFor": ".product-slider-nav"
  }'>
           <div class="single-slide">
            <img src="~/image/products/@Model.MainImagePath" alt="@Model.Name">
  </div>
               @if (Model.ProductImages != null && Model.ProductImages.Any())
          {
     @foreach (var img in Model.ProductImages.OrderBy(x => x.Order))
         {
               <div class="single-slide">
      <img src="~/image/products/@img.ImagePath" alt="@Model.Name">
</div>
      }
        }
                else
         {
      @for (int i = 2; i <= 5; i++)
        {
<div class="single-slide">
            <img src="~/image/products/product-details-@(i).jpg" alt="@Model.Name">
          </div>
      }
     }
                </div>
         <!-- Product Details Slider Nav -->
     <div class="mt--30 product-slider-nav sb-slick-slider arrow-type-two" data-slick-setting='{
     "infinite":true,
      "autoplay": true,
          "autoplaySpeed": 8000,
               "slidesToShow": 4,
 "arrows": true,
          "prevArrow":{"buttonClass": "slick-prev","iconClass":"fa fa-chevron-left"},
   "nextArrow":{"buttonClass": "slick-next","iconClass":"fa fa-chevron-right"},
           "asNavFor": ".product-details-slider",
  "focusOnSelect": true
 }'>
          <div class="single-slide">
         <img src="~/image/products/@Model.MainImagePath" alt="@Model.Name">
        </div>
         @if (Model.ProductImages != null && Model.ProductImages.Any())
         {
 @foreach (var img in Model.ProductImages.OrderBy(x => x.Order))
  {
   <div class="single-slide">
      <img src="~/image/products/@img.ImagePath" alt="@Model.Name">
    </div>
    }
   }
             else
          {
    @for (int i = 2; i <= 5; i++)
              {
   <div class="single-slide">
  <img src="~/image/products/product-details-@(i).jpg" alt="@Model.Name">
          </div>
    }
  }
       </div>
            </div>
 <div class="col-lg-6 mt--30 mt-lg--30">
              <div class="product-details-info pl-lg--30 ">
       @if (!string.IsNullOrEmpty(Model.Category?.Name))
       {
            <p class="tag-block">Category: <a href="/shop?category=@Model.CategoryId">@Model.Category.Name</a></p>
      }
              <h3 class="product-title">@Model.Name</h3>
           <ul class="list-unstyled">
         <li>Ex Tax: <span class="list-value"> £@Model.Price.ToString("N2")</span></li>
       @if (!string.IsNullOrEmpty(Model.Author))
         {
        <li>Author: <span class="list-value font-weight-bold"> @Model.Author</span></li>
      }
        @if (!string.IsNullOrEmpty(Model.SKU))
            {
  <li>Product Code: <span class="list-value"> @Model.SKU</span></li>
          }
       <li>Reward Points: <span class="list-value"> @(Model.SalesCount * 10)</span></li>
      <li>Availability: <span class="list-value"> @(Model.StockQuantity > 0 ? "In Stock" : "Out of Stock")</span></li>
     </ul>
           <div class="price-block">
             <span class="price-new">£@Model.Price.ToString("N2")</span>
    @if (Model.OldPrice.HasValue && Model.OldPrice.Value > Model.Price)
         {
      <del class="price-old">£@Model.OldPrice.Value.ToString("N2")</del>
  }
    </div>
 <div class="rating-widget">
      <div class="rating-block">
        @for (int i = 1; i <= 5; i++)
 {
            if (i <= Model.Rating)
          {
            <span class="fas fa-star star_on"></span>
 }
       else
                {
        <span class="fas fa-star"></span>
       }
         }
           </div>
    <div class="review-widget">
            <a href="#">(@Model.ReviewCount Reviews)</a> <span>|</span>
      <a href="#">Write a review</a>
             </div>
           </div>
 <article class="product-details-article">
         <h4 class="sr-only">Product Summary</h4>
           <p>@Html.Raw(Model.Description)</p>
 </article>
        <div class="add-to-cart-row">
      <div class="count-input-block">
        <span class="widget-label">Qty</span>
     <input type="number" class="form-control text-center" value="1" min="1" max="@Model.StockQuantity">
            </div>
        <div class="add-cart-btn">
       <a href="#" class="btn btn-outlined--primary"><span class="plus-icon">+</span>Add to Cart</a>
            </div>
 </div>
             <div class="compare-wishlist-row">
         <a href="#" class="add-link"><i class="fas fa-heart"></i>Add to Wish List</a>
               <a href="#" class="add-link"><i class="fas fa-random"></i>Add to Compare</a>
         </div>
    </div>
      </div>
        </div>
     <div class="sb-custom-tab review-tab section-padding">
       <ul class="nav nav-tabs nav-style-2" id="myTab2" role="tablist">
        <li class="nav-item">
             <a class="nav-link active" id="tab1" data-bs-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">
      DESCRIPTION
  </a>
     </li>
     <li class="nav-item">
         <a class="nav-link" id="tab2" data-bs-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="true">
            REVIEWS (@Model.ReviewCount)
         </a>
       </li>
    </ul>
            <div class="tab-content space-db--20" id="myTabContent">
     <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="tab1">
             <article class="review-article">
           <h1 class="sr-only">Tab Article</h1>
         <p>@Html.Raw(Model.Description)</p>
       @if (!string.IsNullOrEmpty(Model.ISBN))
            {
<h4>Product Details</h4>
     <ul>
            <li>ISBN: @Model.ISBN</li>
             @if (Model.PageCount.HasValue)
      {
         <li>Pages: @Model.PageCount</li>
    }
  @if (!string.IsNullOrEmpty(Model.Publisher))
      {
      <li>Publisher: @Model.Publisher</li>
        }
           @if (Model.PublishDate.HasValue)
     {
    <li>Publish Date: @Model.PublishDate.Value.ToString("MMMM dd, yyyy")</li>
        }
@if (!string.IsNullOrEmpty(Model.Language))
         {
            <li>Language: @Model.Language</li>
            }
           @if (Model.Weight.HasValue)
        {
       <li>Weight: @Model.Weight.Value.ToString("N2") lbs</li>
     }
                @if (!string.IsNullOrEmpty(Model.Dimensions))
       {
             <li>Dimensions: @Model.Dimensions</li>
      }
      </ul>
      }
    </article>
        </div>
       <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="tab2">
                <div class="review-block-area">
               <p class="text-center">No reviews yet. Be the first to review!</p>
            </div>
         </div>
       </div>
        </div>
    </div>
</section>

<!--=================================
Related Products
===================================== -->
@if (ViewBag.RelatedProducts != null && ((List<Product>)ViewBag.RelatedProducts).Any())
{
    <section class="section-margin">
        <div class="container">
            <div class="section-title section-title--bordered">
            <h2>RELATED PRODUCTS</h2>
         </div>
            <div class="product-slider sb-slick-slider slider-border-single-row" data-slick-setting='{
           "autoplay": true,
    "autoplaySpeed": 8000,
    "slidesToShow": 5,
     "dots":true
}' data-slick-responsive='[
         {"breakpoint":1500, "settings": {"slidesToShow": 4} },
   {"breakpoint":992, "settings": {"slidesToShow": 3} },
      {"breakpoint":768, "settings": {"slidesToShow": 2} },
    {"breakpoint":480, "settings": {"slidesToShow": 1} },
   {"breakpoint":320, "settings": {"slidesToShow": 1} }
  ]'>
     @foreach (var product in (List<Product>)ViewBag.RelatedProducts)
    {
             <div class="single-slide">
                 <div class="product-card">
                  <div class="product-header">
   @if (!string.IsNullOrEmpty(product.Author))
           {
      <a href="#" class="author">@product.Author</a>
     }
   <h3><a href="/product/details/@product.Id">@product.Name</a></h3>
                </div>
 <div class="product-card--body">
              <div class="card-image">
  <img src="~/image/products/@product.MainImagePath" alt="@product.Name">
 <div class="hover-contents">
           <a href="/product/details/@product.Id" class="hover-image">
      <img src="~/image/products/@(product.HoverImagePath ?? product.MainImagePath)" alt="@product.Name">
        </a>
       <div class="hover-btns">
                 <a href="#" class="single-btn">
  <i class="fas fa-shopping-basket"></i>
             </a>
 <a href="#" class="single-btn">
               <i class="fas fa-heart"></i>
 </a>
      <a href="#" class="single-btn">
          <i class="fas fa-random"></i>
         </a>
            <a href="/product/details/@product.Id" class="single-btn">
         <i class="fas fa-eye"></i>
       </a>
              </div>
               </div>
      </div>
               <div class="price-block">
               <span class="price">£@product.Price.ToString("N2")</span>
     @if (product.OldPrice.HasValue && product.OldPrice.Value > product.Price)
 {
  <del class="price-old">£@product.OldPrice.Value.ToString("N2")</del>
            @if (product.DiscountPercentage.HasValue)
           {
       <span class="price-discount">@product.DiscountPercentage%</span>
          }
         }
        </div>
       </div>
      </div>
  </div>
        }
        </div>
        </div>
    </section>
}
