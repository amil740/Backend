@model Pustok.Models.Product

<div class="single-slide">
    <div class="product-card card-style-list">
  <div class="card-image">
       <img src="~/image/products/@Model.MainImagePath" alt="@Model.Name">
 </div>
        <div class="product-card--body">
         <div class="product-header">
     @if (!string.IsNullOrEmpty(Model.Author))
   {
   <a href="/shop?author=@Model.Author" class="author">@Model.Author</a>
   }
    <h3><a href="/product/details/@Model.Id">@Model.Name</a></h3>
     </div>
        <div class="price-block">
 <span class="price">£@Model.Price.ToString("N2")</span>
       @if (Model.OldPrice.HasValue && Model.OldPrice.Value > Model.Price)
 {
    <del class="price-old">£@Model.OldPrice.Value.ToString("N2")</del>
       @if (Model.DiscountPercentage.HasValue)
        {
         <span class="price-discount">@Model.DiscountPercentage%</span>
     }
      }
      </div>
      </div>
    </div>
</div>
