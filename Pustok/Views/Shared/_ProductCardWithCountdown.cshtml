@model Pustok.Models.Product

<div class="single-slide">
    <div class="product-card">
        <div class="product-header">
    @if (!string.IsNullOrEmpty(Model.Author))
   {
        <a href="/shop?author=@Model.Author" class="author">@Model.Author</a>
            }
   <h3><a href="/product/details/@Model.Id">@Model.Name</a></h3>
  </div>
   <div class="product-card--body">
            <div class="card-image">
   <img src="~/image/products/@Model.MainImagePath" alt="@Model.Name">
     <div class="hover-contents">
   <a href="/product/details/@Model.Id" class="hover-image">
      <img src="~/image/products/@(Model.HoverImagePath ?? Model.MainImagePath)" alt="@Model.Name">
    </a>
<div class="hover-btns">
       <a href="#" class="single-btn" data-product-id="@Model.Id" data-action="add-to-cart">
        <i class="fas fa-shopping-basket"></i>
</a>
      <a href="#" class="single-btn" data-product-id="@Model.Id" data-action="add-to-wishlist">
         <i class="fas fa-heart"></i>
     </a>
    <a href="#" class="single-btn" data-product-id="@Model.Id" data-action="add-to-compare">
<i class="fas fa-random"></i>
   </a>
     <a href="#" class="single-btn" data-product-id="@Model.Id" data-bs-toggle="modal" data-bs-target="#quickModal">
   <i class="fas fa-eye"></i>
  </a>
        </div>
       </div>
 </div>
      <div class="price-block">
           <span class="price">£@Model.Price.ToString("N2")</span>
   @if (Model.OldPrice.HasValue && Model.OldPrice.Value > Model.Price)
{
    <del class="price-old">£@Model.OldPrice.Value.ToString("N2")</del>
       @if (Model.DiscountPercentage.HasValue)
     {
      <span class="price-discount">@Model.DiscountPercentage%</span>
            }
    }
    </div>
            @if (Model.SaleEndDate.HasValue && Model.SaleEndDate.Value > DateTime.Now)
   {
    <div class="count-down-block">
          <div class="product-countdown" data-countdown="@Model.SaleEndDate.Value.ToString("MM/dd/yyyy")"></div>
       </div>
   }
   </div>
    </div>
</div>
