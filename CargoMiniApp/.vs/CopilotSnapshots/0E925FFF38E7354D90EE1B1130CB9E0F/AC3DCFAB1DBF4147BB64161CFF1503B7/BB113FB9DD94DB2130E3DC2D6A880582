using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Threading;

namespace CargoMiniApp.Models
{
    internal class Customer
    {
        private static int _nextId = 0;

        public int Id { get; }
        public string Adı { get; set; }
        public string Şəhəri { get; set; }

        // Instances must be created via this constructor
        public Customer(string adi, string sehri)
        {
            Id = Interlocked.Increment(ref _nextId);
            Adı = adi ?? throw new ArgumentNullException(nameof(adi));
            Şəhəri = sehri ?? throw new ArgumentNullException(nameof(sehri));
        }

    }
}
