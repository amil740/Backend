using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HRManagementApp.Models
{
    internal class Employee
    {
        private static int _employeeCounter = 1000;
        
        public string FullName { get; set; }
        private string _Position;
        private string _No;
        private double _salary;
        private string _DepartmentName;
        
        // Constructor
        public Employee(string fullName, string departmentName, string position, double salary)
        {
            FullName = fullName;
            DepartmentName = departmentName;
            Position = position;
            Salary = salary;
            
            // Generate employee number from first 2 letters of department + counter
            string departmentPrefix = DepartmentName.Substring(0, 2).ToUpper();
            _No = departmentPrefix + _employeeCounter;
            
            // Increment counter for next employee
            _employeeCounter++;
        }
        
        public string No
        {
            get => _No;
            private set => _No = value;
        }
        
        public string DepartmentName 
        { 
            get => _DepartmentName;
            set
            {
                if (string.IsNullOrWhiteSpace(value) || value.Length < 2)
                {
                    throw new ArgumentException("Department adi minimum 2 herf olmalidir");
                }
                _DepartmentName = value;
            }
        }
        
        public string Position
        {
            get => _Position;
            set
            {
                if (string.IsNullOrWhiteSpace(value) || value.Length < 2)
                {
                    throw new ArgumentException("Position 2 herfden cox olmalidir");
                }
                _Position = value;
            }
        }
        
        public double Salary
        {
            get => _salary;
            set
            {
                if (value < 250)
                {
                    throw new ArgumentException("Salary 250 den asagi ola bilmez");
                }
                _salary = value;
            }
        }
    }  
}
