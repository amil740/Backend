using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HRManagementApp.Models
{
    internal class Employee
    {
        private static int _employeeCounter = 1000;
        
        public string FullName { get; set; }
        private string _Position;
        private string _No;
        private double _salary;
        private string _DepartmentName;
        
        public Employee(string fullName, string departmentName, string position, double salary)
        {
            FullName = fullName;
            DepartmentName = departmentName;
            string v = DepartmentName.Substring(0, 2).ToUpper();
            _No = v + _employeeCounter;
            
            _employeeCounter++;
        }

        public string No => _No;

        public string DepartmentName
        { 
            get => _DepartmentName;
            set
            {
                if (value.Length < 2)
                {
                    throw new ArgumentException("Department adi minimum 2 herf olmalidir");
                }
                _DepartmentName = value;
            }
        }
        
        public string Position
        {
            get => _Position;
            set
            {
                if (value.Length < 2)
                {
                    throw new ArgumentException("Position 2 herfden cox olmalidir");
                }
                _Position = value;
            }
        }
        
        public double Salary
        {
            get => _salary;
            set
            {
                if (value < 250)
                {
                    throw new ArgumentException("Salary 250 den asagi ola bilmez");
                }
                _salary = value;
            }
        }
    }
}
